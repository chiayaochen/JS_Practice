    "version": "0.2.0",
    "configurations": [
        {
            "console": "externalTerminal", // 加這一行，就會自動打開外部的命令列
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
            // 原本的參數是 "program": //"${workspaceFolder}\\JS_HelloWorld_4.js"
            // 改成 ${file} 表示指向現在正在進行的檔案
        }
    ]
}